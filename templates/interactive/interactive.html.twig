{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Interactive</title>{% endblock %}

{% block body %}

    <section class="bridges-interactive-secondary-menu">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-xs-12">
                    <ul class="secondary-navbar">
                        <li>
                            <a href="{{ path('ecogames') }}">EcoGames</a>
                        </li>
                        <li>
                            <a href="{{ path('bbmagazine') }}">BB Magazine</a>
                        </li>
                        <li>
                            <a href="{{ path('videos') }}">Videos</a>
                        </li>
                        <li>
                            <a href="{{ path('tchalo') }}">Meet Tchalo!</a>
                        </li>
                        <li>
                            <a href="{{ path('coloring') }}">Coloring</a>
                        </li>
                        <li>
                            <a href="{{ path('treevia') }}">Treevia!</a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4 col-xs-12 text-right">
                    <a href="{{ path('interactive') }}">
                        <img src="./img/bb-interactive.svg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </section>


    <section class="bridges-interactive-slider-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="bb-interactive-slider">
                        {% for item in slider %}
                            <div class="bb-slide-one" style="background:url('uploads/images/{{ item.Image }}') no-repeat; background-size:cover; background-position: 0;">
                                <div class="bb-slide-text-wrapper">
                                    {% autoescape %}
                                        <p>{{ item.Text|raw }}</p>
                                        <h1>{{ item.Title|raw }}</h1>
                                    {% endautoescape %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="bb-interactive-pictured-menu">
        <div class="container">
            {% set total = 1 %}
            <div class="row">
                {% for item in bottom %}
                    {% if total == 4 %}
                        <div class="row">
                    {% endif %}
                        <div class="col-sm-4 col-xs-12">
                            <a href="{{ item.path }}">
                                <div>
                                    <img src="uploads/images/{{ item.Image }}" srcset="./img/games-menu-photo@2x.png 2x" alt="">
                                    <div class="menu-title games">
                                        {% autoescape %}
                                            <p>{{ item.Title|raw }}</p>
                                        {% endautoescape %}
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% if total == 3 %}
                        </div>
                        {% set total = total + 1 %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>


    <section class="order-atp-t-shirt">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2>Order your ATP T-Shirt Today!</h2>
                    <button class="order-btn">Order Now!</button>
                </div>
            </div>
        </div>
    </section>



    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">Glossary</a>
                        </li>

                        <li>
                            <a href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">FAQ</a>
                        </li>
                        <li>
                            <a href="#">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="#">Terms & Conditions</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p class="copyright-text">&copy; Copyright 1994-2018 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                    <p class="hashtag">#GetRooted</p>
                    <a href="#">
                        <img src="./img/facebook-logo.svg" alt="linkedin">
                    </a>
                    <a href="#">
                        <img src="./img/twitter-logo.svg" alt="facebook">
                    </a>
                    <a href="#">
                        <img src="./img/instagram-logo.svg" alt="twitter">
                    </a>
                    <a href="#">
                        <img src="./img/youtube.svg" alt="twitter">
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Slick Slider -->
    <script src="{{ asset('js/slick.min.js') }}"></script>

    <!-- Slick custom functionality -->
    <script src="{{ asset('js/sliderFunctionality.js') }}"></script>


    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>

{% endblock %}

