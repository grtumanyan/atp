                            <li>
                                <a href="{{ path('treevia') }}">Treevia!</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4 col-xs-12 text-right">
                        <a href="{{ path('interactive') }}">
                            <img src="./img/bb-interactive.svg" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </section>


        <section class="treevia-page-wrapper">
            <div class="container">
                <h4>TREEVIA</h4>
                <p>Watch Tigranâ€™s videos and learn about our enviroment</p>
                <div class="row">
                    {% for item in content %}
                        <div class="col-sm-4 col-xs-12">
                            <div class="bb-video-two" style="background: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url('uploads/images/{{ item.Image }}') no-repeat; background-size: cover;">
                                <div class="title-and-play-button-wrapper">
                                    {% autoescape %}
                                        <h3>{{ item.Title|raw }}</h3>
                                    {% endautoescape %}
                                    <a  data-toggle="modal" data-target="#m{{ item.id }}"><img class="play-button" src="./img/play_btn.svg" alt=""></a>
                                </div>
                            </div>
                            <div class="modal fade" id="m{{ item.id }}" tabindex="-1" role="dialog" aria-labelledby="m{{ item.id }}"
                                 aria-hidden="true">
                                <div class="modal-dialogg">
                                    <div class="modal-contentt">
                                        <div class="modal-body">
                                            <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">&times;</button>
                                            <div class="video-container">
                                                <iframe width="560" height="315" src="{{ item.link }}" frameborder="0"  allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="col-sm-4 col-xs-12">

                    </div>
                </div>
                <div class="row form-wrapper">
                    <div class="col-sm-8 col-xs-12">
                        <p>Have a question about the environment.  Ask Tigran Today? </p>
                        <form action="">
                            <div class="two-inputs-wrapper">
                                <div>
                                    <h6>FIRST NAME</h6>
                                    <input type="text" placeholder="Your Name">
                                </div>
                                <div>
                                    <h6>LAST NAME</h6>
                                    <input type="text" placeholder="Your Last Name">
                                </div>
                            </div>
                            <div class="two-inputs-wrapper">
                                <div>
                                    <h6>E-MAIL</h6>
                                    <input type="email" placeholder="Your E-mail Address">
                                </div>
                                <div>
                                    <h6>COUNTRY</h6>
                                    <select id="country" name ="country"></select>
                                </div>
                            </div>
                            <h6>WHAT IS YOUR QUESTION?</h6>
                            <textarea name="question" ></textarea>
                            <div class="text-right">
                                <button>Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!--Footer Section-->

        <section class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <ul>
