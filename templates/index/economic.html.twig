{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - News</title>{% endblock %}
{% block body %}

    <section class="economic-empowerment secondary-pages-top-content" style="background:url('uploads/images/{{ top.Image }}') no-repeat; background-size:cover; background-position: 0;">
        <div class="container">
            <div class="row center-aligned-row">
                <div class="col-sm-6">
                    {% autoescape %}
                        {% if lang == 'eng' %}
                            <h1>{{ top.TitleEng|raw }}</h1>
                        {% elseif lang == 'arm' %}
                            <h1>{{ top.TitleArm|raw }}</h1>
                        {% endif %}
                    {% endautoescape %}
                </div>
                <div class="col-sm-6 cover-text">
                    {% autoescape %}
                        {% if lang == 'eng' %}
                            <p>{{ top.TextTopEng|raw }}</p>
                        {% elseif lang == 'arm' %}
                            <p>{{ top.TextTopArm|raw }}</p>
                        {% endif %}
                    {% endautoescape %}
                </div>
            </div>
        </div>
    </section>

    <div class="economic-empowerment-main-content-wrapper">

        <section class="community-second">
            <div class="visible-xs visible-sm">
                <div class="mobile-subdropdown-wrapper ">
                    <a href="{{ path('backyard') }}">Backyard Nurseries</a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10 col-xs-12 text-center">
                        {% autoescape %}
                            {% if lang == 'eng' %}
                                <p>{{ top.TextBottomEng|raw }}</p>
                            {% elseif lang == 'arm' %}
                                <p>{{ top.TextBottomArm|raw }}</p>
                            {% endif %}
                        {% endautoescape %}
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        </section>

        <section class="community-second economic-empowerment-articles">
            <div class="container">
                {% for item in content %}
                    <div class="row center-aligned-row">
                    {% if item.Position == 'left' %}
                        <div class="col-md-6 col-xs-12">
                            <img src="uploads/images/{{ item.Image }}"  alt="">
                        </div>
                        <div class="col-md-6 col-xs-12">
                            {% autoescape %}
                                {% if lang == 'eng' %}
                                    <h4>{{ item.TitleEng|raw }}</h4>
                                {% elseif lang == 'arm' %}
                                    <h4>{{ item.TitleArm|raw }}</h4>
                                {% endif %}
                            {% endautoescape %}
                            {% autoescape %}
                                {% if lang == 'eng' %}
                                    <p>{{ item.TextEng|raw }}</p>
                                {% elseif lang == 'arm' %}
                                    <p>{{ item.TextArm|raw }}</p>
                                {% endif %}
                            {% endautoescape %}
                        </div>
                    {% elseif item.Position == 'right' %}
                        <div class="col-md-6 col-xs-12">
                            {% autoescape %}
                                {% if lang == 'eng' %}
                                    <h4>{{ item.TitleEng|raw }}</h4>
                                {% elseif lang == 'arm' %}
                                    <h4>{{ item.TitleArm|raw }}</h4>
                                {% endif %}
                            {% endautoescape %}
                            {% autoescape %}
                                {% if lang == 'eng' %}
                                    <p>{{ item.TextEng|raw }}</p>
                                {% elseif lang == 'arm' %}
                                    <p>{{ item.TextArm|raw }}</p>
                                {% endif %}
                            {% endautoescape %}
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <img src="uploads/images/{{ item.Image }}"  alt="">
                        </div>
                    {% endif %}
                    </div>
                {% endfor %}
            </div>
        </section>

        <section class="community-last-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h4>FEATURED CONTENT</h4>
                    </div>
                    <div class="row">

                    </div>
                </div>
                <div class="row">
                    {% for item in bottom %}
                        {% if item.Position == 'first' %}
                            <div class="col-md-6">
                                <div class="first-content-video">
                                    <div class="support-families">
                                        <div class="title-and-play-button-wrapper">
                                            {% autoescape %}
                                                {% if lang == 'eng' %}
                                                    <h3>{{ item.TextEng|raw }}</h3>
                                                {% elseif lang == 'arm' %}
                                                    <h3>{{ item.TextArm|raw }}</h3>
                                                {% endif %}
                                            {% endautoescape %}
                                            <a  data-toggle="modal" data-target="#how_planting_works"><img class="play-button" src="./img/play_btn.svg" alt=""></a>
                                        </div>
                                    </div>
                                    <div class="modal fade" id="how_planting_works" tabindex="-1" role="dialog" aria-labelledby="how_planting_works"
                                         aria-hidden="true">
                                        <div class="modal-dialogg">
                                            <div class="modal-contentt">
                                                <div class="modal-body">
                                                    <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                                            aria-hidden="true">&times;</button>
                                                    <div class="video-container">
                                                        <iframe width="560" height="315" src="{{ item.Link }}" frameborder="0"  allowfullscreen></iframe>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% elseif item.Position == 'second' %}
                            <div class="col-md-3">
                                <div class="second-content">
                                    {% autoescape %}
                                        {% if lang == 'eng' %}
                                            <h3>{{ item.TextEng|raw }}</h3>
                                        {% elseif lang == 'arm' %}
                                            <h3>{{ item.TextArm|raw }}</h3>
                                        {% endif %}
                                    {% endautoescape %}
                                    <p>{{ item.DateCreated.format('d/m/Y') }}</p>
                                    <a href="{{ item.Link }}">Read More</a>
                                </div>
                            </div>
                        {% elseif item.Position == 'third' %}
                            <div class="col-md-3">
                                <div class="third-content">
                                    {% autoescape %}
                                        {% if lang == 'eng' %}
                                            <h3>{{ item.TextEng|raw }}</h3>
                                        {% elseif lang == 'arm' %}
                                            <h3>{{ item.TextArm|raw }}</h3>
                                        {% endif %}
                                    {% endautoescape %}
                                    <p>{{ item.DateCreated.format('d/m/Y') }}</p>
                                    <a href="{{ item.Link }}">
                                        <button> Donate</button>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>




    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">Glossary</a>
                        </li>

                        <li>
                            <a href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">FAQ</a>
                        </li>
                        <li>
                            <a href="#">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="#">Terms & Conditions</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p class="copyright-text">&copy; Copyright 1994-2018 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                    <p class="hashtag">#GetRooted</p>
                    <a href="#">
                        <img src="./img/facebook-logo.svg" alt="linkedin">
                    </a>
                    <a href="#">
                        <img src="./img/twitter-logo.svg" alt="facebook">
                    </a>
                    <a href="#">
                        <img src="./img/instagram-logo.svg" alt="twitter">
                    </a>
                    <a href="#">
                        <img src="./img/youtube.svg" alt="twitter">
                    </a>
                </div>
            </div>
        </div>
    </section>


    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>


    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>





    </body>
