{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Tour and Plant</title>{% endblock %}
{% block body %}




    <section class="payment-info-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8 col-xs-12">
                    <h1>Payment Information</h1>
                    {{ form_start(form) }}
                        <div class="top-inputs-wrapper">
                            <div>
                                <label>ACCOUNT NUMBER</label><br />
                                {{ form_widget(form.accountnumber, { 'attr': {'maxlength': "19"} }) }}
                                <div style="color: red;">{{ form_errors(form.accountnumber) }} </div>
                            </div>
                            <div>
                                <label>ACCOUNT HOLDER</label><br />
                                {{ form_widget(form.accountholder) }}
                                <div style="color: red;">{{ form_errors(form.accountholder) }} </div>
                            </div>
                        </div>
                        <div class="bottom-inputs-wrapper">
                            <div>
                                <label>EXPIRY DATE</label><br />
                                {{ form_widget(form.expirymonth, { 'attr': {'id': "month" } } ) }}
                                <select name="month" id="month_selector">
                                    <option value="" selected disabled>MM</option>
                                </select>
                                {{ form_widget(form.expiryyear, { 'attr': {'id': "year" } } ) }}
                                <select name="year" id="year_selector">
                                    <option value="" selected disabled>YYYY</option>
                                </select>
                            </div>
                            <div>
                                <label>CVV/CSV</label><br />
                                {{ form_widget(form.cvv, { 'attr': {'maxlength': "4" } }) }}
                                <div style="color: red;">{{ form_errors(form.cvv) }} </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="">
                                {{ form_widget(form.send, { 'attr': {'class': "donate-now", "style": "background-color: #777777"}}) }}
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-sm-2"></div>
            </div>
        </div>
    </section>


    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">Glossary</a>
                        </li>

                        <li>
                            <a href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">FAQ</a>
                        </li>
                        <li>
                            <a href="#">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="#">Terms & Conditions</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p class="copyright-text">&copy; Copyright 1994-2018 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                    <p class="hashtag">#GetRooted</p>
                    <a href="https://www.facebook.com/armeniatree">
                        <img src="./img/facebook-logo.svg" alt="facebook">
                    </a>
                    <a href="https://twitter.com/ArmeniaTree">
                        <img src="./img/twitter-logo.svg" alt="twitter">
                    </a>
                    <a href="https://www.instagram.com/armeniatree/">
                        <img src="./img/instagram-logo.svg" alt="instagram">
                    </a>
                    <a href="https://www.youtube.com/user/ArmeniaTreeProject">
                        <img src="./img/youtube.svg" alt="youtube">
                    </a>
                </div>
            </div>
        </div>
    </section>


    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>


    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>



    <script>
        $('form').on('keyup change paste', 'input, select, textarea', function(){
            if($('#form_accountnumber').val() && $('#form_expirymonth').val()  && $('#form_expiryyear').val() && $('#form_cvv').val()){
                $('#form_send').css("background-color", "#6FD054");
            }else{
                $('#form_send').css("background-color", "#777777");
            }
        });
    </script>


    </body>
    </html>
{% endblock %}