{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Single News</title>{% endblock %}

    {% block body %}
        <section class="forestation secondary-pages-top-content" style="background:url('uploads/images/{{ top.Image }}') no-repeat; background-size:cover;">
            <div class="container">
                <div class="row center-aligned-row">
                    <div class="col-sm-6">
                        {% autoescape %}
                            <h1>{{ top.Title|raw }}</h1>
                        {% endautoescape %}
                    </div>
                    <div class="col-sm-6 cover-text">
                        {% autoescape %}
                            <p>{{ top.Text|raw }}</p>
                        {% endautoescape %}
                    </div>
                </div>
            </div>
        </section>

        <div class="forestation-main-content-wrapper">
            <section class="community-second">
                <div class="mobile-subdropdown-wrapper visible-xs visible-sm">
                    <a href="">Mirak Family Nursery</a>
                </div>
                <div class="container">
                    {% for item in content %}
                    {% if item.Position == 'first' %}
                    <div class="row center-aligned-row">
                        <div class="col-md-6">
                            <img src="uploads/images/{{ item.Image }}" srcset="./img/forestry-article-one@2x.png 2x" alt="">
                        </div>
                        <div class="col-md-6">
                            {% autoescape %}
                                <p>
                                    {{ item.Text|raw }}
                                </p>
                            {% endautoescape %}
                        </div>
                    </div>
                    {% elseif item.Position == 'second' %}
                    <div class="row center-aligned-row">
                        <div class="col-md-6">
                            {% autoescape %}
                                    {{ item.Text|raw }}
                            {% endautoescape %}
                            <button>See the Mirak Nursery in action</button>
                        </div>
                        <div class="col-md-6">
                            <div class="mirak-family-nursery">
                                <div class="title-and-play-button-wrapper">

                                </div>
                            </div>
                            <div class="modal fade" id="mirak_family_nursery" tabindex="-1" role="dialog" aria-labelledby="mirak_family_nursery"
                                 aria-hidden="true">
                                <div class="modal-dialogg">
                                    <div class="modal-contentt">
                                        <div class="modal-body">
                                            <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">&times;</button>
                                            <div class="video-container">
                                                <iframe width="560" height="315" src="{{ item.VideoLink }}" frameborder="0"  allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            {% elseif item.Position == 'third' %}
            <section class="community-third">
                <div class="container center-aligned-row">
                    <div class="tree-survival-content-wrapper">
                        <div>
                            <img src="uploads/images/{{ item.Image }}" srcset="./img/forestry-article-two@2x.png 2x" alt="">
                        </div>
                        <div>
                            {% autoescape %}
                                <h5>{{ item.Title|raw }}</h5>
                            {% endautoescape %}
                            {% autoescape %}
                                {{ item.Text|raw }}
                            {% endautoescape %}
                            <a href="{{ path('tree') }}">
                                <button>Learn More</button>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
            {% elseif item.Position == 'fourth' %}
            <section class="community-second">
                <div class="container">
                    <div class="row center-aligned-row">
                        <div class="col-md-6">
                            {% autoescape %}
                                <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                {{ item.Text|raw }}
                            {% endautoescape %}
                            <button>Learn about Fire Safety in Armenia</button>
                        </div>
                        <div class="col-md-6">
                            <img src="uploads/images/{{ item.Image }}" srcset="./img/forestry-article-three@2x.png 2x" alt="">
                        </div>
                    </div>
                    {% elseif item.Position == 'fifth' %}
                    <div class="row">
                        <div class="col-md-6">
                            <img src="uploads/images/{{ item.Image }}" srcset="./img/forestry-article-four@2x.png 2x" alt="">
                        </div>
                        <div class="col-md-6">
                            {% autoescape %}
                                <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                {{ item.Text|raw }}
                            {% endautoescape %}
                        </div>
                    </div>
                    {% elseif item.Position == 'sixth' %}
                    <div class="row center-aligned-row">
                        <div class="col-md-6">
                            {% autoescape %}
                                <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                {{ item.Text|raw }}
                            {% endautoescape %}
                        </div>
                        <div class="col-md-6">
                            <img src="uploads/images/{{ item.Image }}" srcset="./img/forestry-article-five@2x.png 2x" alt="">
                        </div>
                    </div>
                </div>
            </section>
            {% endif %}
            {% endfor %}

            <section class="community-last-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>FEATURED CONTENT</h4>
                        </div>
                        <div class="row">

                        </div>
                    </div>
                    <div class="row">
                        {% for item in bottom %}
                        {% if item.Position == 'first' %}
                        <div class="col-md-6">
                            <div class="first-content">
                                {% elseif item.Position == 'second' %}
                                <div class="col-md-3">
                                    <div class="second-content">
                                        {% elseif item.Position == 'third' %}
                                        <div class="col-md-3">
                                            <div class="third-content">
                                                {% endif %}
                                                {% autoescape %}
                                                    <h3>{{ item.Text|raw }}</h3>
                                                {% endautoescape %}
                                                <p>{{ item.DateCreated.format('d/m/Y') }}</p>
                                                {% if item.LinkType == 'outter' %}
                                                    <a href="{{ item.Link }}">
                                                        <button> Donate</button>
                                                    </a>
                                                {% elseif item.LinkType == 'inner' %}
                                                    <a href="{{ item.Link }}">Read More</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
            </section>
        </div>




        <!--Footer Section-->

        <section class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <ul>
                            <li>
                                <a href="#">Glossary</a>
                            </li>

                            <li>
                                <a href="#">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <ul>
                            <li>
                                <a href="#">FAQ</a>
                            </li>
                            <li>
                                <a href="#">Privacy Policy</a>
                            </li>
                            <li>
                                <a href="#">Terms & Conditions</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        <p class="copyright-text">&copy; Copyright 1994-2018 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                        <p class="hashtag">#GetRooted</p>
                        <a href="#">
                            <img src="./img/facebook-logo.svg" alt="linkedin">
                        </a>
                        <a href="#">
                            <img src="./img/twitter-logo.svg" alt="facebook">
                        </a>
                        <a href="#">
                            <img src="./img/instagram-logo.svg" alt="twitter">
                        </a>
                        <a href="#">
                            <img src="./img/youtube.svg" alt="twitter">
                        </a>
                    </div>
                </div>
            </div>
        </section>

    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>

{% endblock %}