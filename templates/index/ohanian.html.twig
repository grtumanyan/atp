{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Ohanian Educational Centers</title>{% endblock %}
{% block body %}

    <section class="ohanian-educational-centers secondary-pages-top-content" style="background:url('uploads/images/{{ top.Image }}') no-repeat; background-size:cover;">
        <div class="container">
            <div class="row center-aligned-row">
                <div class="col-sm-12">
                    {% autoescape %}
                        {% if lang == 'eng' %}
                            <h1>{{ top.TitleEng|raw }}</h1>
                        {% elseif lang == 'arm' %}
                            <h1>{{ top.TitleArm|raw }}</h1>
                        {% endif %}
                    {% endautoescape %}
                    {% autoescape %}
                        {% if lang == 'eng' %}
                            <h4>{{ top.TextEng|raw }}</h4>
                        {% elseif lang == 'arm' %}
                            <h4>{{ top.TextArm|raw }}</h4>
                        {% endif %}
                    {% endautoescape %}
                </div>
            </div>
        </div>
    </section>

    <div class="ohanian-educational-centers-content-wrapper">
        <section class="community-second">
            <div class="container">
                <div class="row center-aligned-row">
                    <div class="col-md-6 col-xs-12">
                        {% autoescape %}
                            {% if lang == 'eng' %}
                                <p>{{ contentTop.TextEng|raw }}</p>
                            {% elseif lang == 'arm' %}
                                <p>{{ contentTop.TextArm|raw }}</p>
                            {% endif %}
                        {% endautoescape %}
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <img src="uploads/images/{{ contentTop.Image }}" alt="">
                    </div>
                </div>
            </div>
        </section>

        <section class="community-third">
            <div class="container">
                <div class="row">
                    {% for item in contentBottom %}
                        <div class="col-sm-4 col-xs-12">
                           <div class="ohanian-educational-centers-bottom-single-content">
                               <img src="uploads/images/{{ item.Image }}" alt="">
                               {% autoescape %}
                                   {% if lang == 'eng' %}
                                       <p>{{ item.TextEng|raw }}</p>
                                   {% elseif lang == 'arm' %}
                                       <p>{{ item.TextArm|raw }}</p>
                                   {% endif %}
                               {% endautoescape %}
                           </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>


    </div>




    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">Glossary</a>
                        </li>

                        <li>
                            <a href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li>
                            <a href="#">FAQ</a>
                        </li>
                        <li>
                            <a href="#">Privacy Policy</a>
                        </li>
                        <li>
                            <a href="#">Terms & Conditions</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p class="copyright-text">&copy; Copyright 1994-2018 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                    <p class="hashtag">#GetRooted</p>
                    <a href="#">
                        <img src="./img/facebook-logo.svg" alt="linkedin">
                    </a>
                    <a href="#">
                        <img src="./img/twitter-logo.svg" alt="facebook">
                    </a>
                    <a href="#">
                        <img src="./img/instagram-logo.svg" alt="twitter">
                    </a>
                    <a href="#">
                        <img src="./img/youtube.svg" alt="twitter">
                    </a>
                </div>
            </div>
        </div>
    </section>


    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>


    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>





