{% extends 'base.html.twig' %}

{% block body %}
    <!--Top Section-->

    <section id="top" class="top-section">
        <div class="slider-wrapper">
            {% for item in slider %}
                <div class="single-slide-one" style="background:url('uploads/images/{{ item.Image }}') no-repeat; background-size:cover; background-position: 0;">
                    <div class="container">
                        {% autoescape %}
                            <h1>{{ item.Title|raw }}</h1>
                            <p>{{ item.Text|raw }}</p>
                        {% endautoescape %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <div class="work-and-news-wrapper">
        <!--Our Work Section-->

        <section id="ourwork" class="our-work">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                        {% autoescape %}
                            <h3>{{ content.Title|raw }}</h3>
                        {% endautoescape %}
                        {% autoescape %}
                            <p>{{ content.TextTop|raw }}</p>
                        {% endautoescape %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12"> </div>
                    {% for item in sections %}
                    <a href="{{ path('index')~item.Path }}">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 text-center">
                            <div class="single item-one" style="background:url('uploads/images/{{ item.Image }}') no-repeat; background-size:cover; background-position: 0;"> </div>
                            {% autoescape %}
                            <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                        </div>
                    </a>
                    {% endfor %}
                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12"> </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                        {% autoescape %}
                            <p>{{ content.TextBottom|raw }}</p>
                        {% endautoescape %}
                    </div>
                </div>
            </div>
        </section>


        <!--News & Article Section-->

        <section id="news" class="news-section">
            <div class="container">
                <div class="grid-container">
                    {% for item in bottom %}
                    <div class="grid-item">
                        <div class="single-grid-content">
                                {% autoescape %}
                                    <h3>{{ item.Title|raw }}</h3>
                                {% endautoescape %}
                                {% if item.DateCreated != null %}
                                    <p>{{ item.DateCreated.format('d/m/Y') }}</p>
                                {% endif %}
                                {% if item.LinkType == 'outter' %}
                                    <a target="_blank" href="{{ item.Link }}">Read More</a>
                                {% elseif item.LinkType == 'inner' %}
                                    <a class="donate-link" href="{{ path('donation') }}">
                                        <button> Donate</button>
                                    </a>
                                {% elseif item.LinkType == 'video' %}
                                    <a  data-toggle="modal" data-target="#about_atp_video"><img class="play-button" src="./img/play_btn.svg" alt=""></a>
                                    <div class="modal fade" id="about_atp_video" tabindex="-1" role="dialog" aria-labelledby="about_atp_video"
                                         aria-hidden="true">
                                        <div class="modal-dialogg">
                                            <div class="modal-contentt">
                                                <div class="modal-body">
                                                    <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                                            aria-hidden="true">&times;</button>
                                                    <div class="video-container">
                                                        <iframe width="560" height="315" src="{{ item.Link }}" frameborder="0"  allowfullscreen></iframe>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                        </div>
                    </div>
                    {% endfor %}
