{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Donation Review</title>{% endblock %}

{% block body %}
<!--Single News-->

<section class="donation-review-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Review Your Donation</h1>
                <p>Please review your donation details and submit</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <div class="donation-details">
                    <div>
                        <p>Donation</p>
                        <p>Designation</p>
                        <p>Number of Payments</p>
                        <p>Certificate</p>
                        <p>Donor Name</p>
                        <p>Donor E-mail</p>
                        <p>Comments</p>
                    </div>
                    <div class="donated-user-details">
                        <p>{{ donation.amount }}</p>
                        <p>Backyard Nurseries</p>
                        <p>One time</p>
                        <p>Yes</p>
                        <p>{{ donation.firstName }} {{ donation.lastName }}</p>
                        <p>{{ donation.email }}</p>
                        <p>Best wishes to this project</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div class="donation-details">
                    <div>
                        <p>Billing Name</p>
                        <p>Address</p>
                    </div>
                    <div class="donated-user-details">
                        <p>Rachel Nadjarian</p>
                        <p>555 My Home, Arlington, MA 02482, US</p>
                        <p>{{ donation.address }}, {{ donation.state }}, {{ donation.country }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 donate-button-wrapper">
                {#<button class="submit-donation">Donate</button>#}
                {% if donation.type == 'OneTime' %}
                    <a href="{{ path('onetime', {'id': donation.Id}) }}" class="submit-donation">Donate</a>
                {% elseif donation.type == 'Monthly' %}
                    <a href="{{ path('plan', {'id': donation.Id}) }}" class="submit-donation">Donate</a>
                {% endif %}
            </div>
        </div>
    </div>
</section>

<!--Footer Section-->

